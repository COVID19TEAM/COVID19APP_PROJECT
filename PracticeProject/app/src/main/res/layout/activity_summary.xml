<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:padding="16dp">

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="정의" />
                <TextView
                    android:id="@+id/justice"
                    android:text="2019년 12월 중국 우한에서 처음 발생한 뒤 전 세계로 확산된, 새로운 유형의 코로나바이러스에 의한 호흡기 감염질환. 더보기"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="증상" />
                <TextView
                    android:text="발열, 권태감, 기침, 호흡곤란 및 폐렴 등 경증에서 중증까지 다양한 호흡기감염증이 나타남. 그 외 가래, 인후통, 두통, 객혈과 오심, 설사 등도 나타남"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="검사" />
                <TextView
                    android:id="@+id/check"
                    android:text="필수검체는 상기도 검체이며, 하기도 검체는 가래가 있는 환자에서 채취. 검체는 의사, 간호사, 임상병리사가 지정된 장소(선별진료소 등)에서 채취함. 더보기 "
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="백신" />
                <TextView
                    android:id="@+id/treatment"
                    android:text="전 국민을 대상으로 접종하되, 접종순서 및 백신의 공급 상황에 맞춰 차례대로 접종. \n백신종류별 특성, 안전성 및 주의사항"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="긴급연락처"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/emergency_number"
                    android:text="가까운 선별 진료소, 관할 보건소, 지역콜센터120, 콜센터 1339"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="관련정보"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/information"
                    android:text="보도자료, 최신뉴스, SNU 팩트체크, 대응수칙, \n전자출입명부 안내, 네이버 QR체크인 안내"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radius_left"
                android:text="선별 진료소"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/medicine"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="정부지원 모음"
                android:textStyle="bold"
                android:id="@+id/government_support"
                android:background="@drawable/radius_left"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="코로나19예방접종"
                android:textStyle="bold"
                android:id="@+id/vaccination"
                android:background="@drawable/radius_left"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="코로나19 감염이 의심되면 즉시 보건소 및 콜센터(전화 1339)에 신고바랍니다."
                android:padding="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/source"
                android:text="출처   중앙재난안전대책본부, 중앙사고수습본부, \n           중앙방역대책본부, Johns Hopkins CSSE"
                android:layout_marginTop="-25dp"
                android:padding="20dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D13B52"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/summary_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="개요"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/accumulate_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="현황"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/predic_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="예상"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/precaution_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="예방수칙"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>